    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="박스에 링크 추가"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="20dp"
        android:textColor="#000"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:paddingBottom="8dp"
        android:gravity="bottom"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ET_name_link_it"
            android:hint="저장할 링크의 제목을 입력하세요."
            android:textSize="16dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:textColor="#A8A8AC"
            android:text="박스선택"
            android:id="@+id/textView4"
            android:layout_marginStart="24dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <Spinner
            android:id="@+id/SP_box_link_it"
            android:spinnerMode="dropdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/relativeLayout"
        android:paddingTop="24dp"
        android:paddingRight="8dp"
        android:paddingBottom="8dp"
        android:gravity="right"
        android:layout_alignParentStart="true">

        <Button

            android:id="@+id/BT_cancel_link_it"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="취소"
            android:textSize="14dp"
            android:background="#FFFFFFFF"
            android:textColor="#25a599"/>

        <Button
            android:id="@+id/BT_linkit_link_it"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="저장"
            android:background="#FFFFFFFF"
            android:textColor="#25a599"/>
    </LinearLayout>

</RelativeLayout>
