<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/RL_url_image_link_box"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/IV_thumb_link_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
        <ImageView
            android:id="@+id/IV_favorite_link_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:layout_marginStart="40dp"
        android:layout_toEndOf="@+id/RL_url_image_link_box">
        <TextView
            android:id="@+id/TV_url_name_link_box"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:singleLine="true"
            android:text="url name"
            android:textSize="30dp"/>
        <TextView
            android:id="@+id/TV_url_writer_date_link_box"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:singleLine="true"
            android:text="url maker"/>
    </LinearLayout>
</RelativeLayout><!-- From: file:/C:/Users/Junyoung/Downloads/LINKBOX/app/src/main/res/layout/layout_url_list_link_box.xml -->