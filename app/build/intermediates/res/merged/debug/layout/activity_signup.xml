<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.sopt.linkbox.activity.loginPage.SignupActivity"
    android:background="@color/indigo500">
    <include
        android:id="@+id/T_toolbar_signup"
        layout="@layout/layout_toolbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:id="@+id/ET_email_signup"
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:hint="Email"/>
        <EditText
            android:id="@+id/ET_name_signup"
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:hint="Name"/>
        <EditText
            android:id="@+id/ET_password_signup"
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:hint="@string/prompt_password"
            android:singleLine="true"
            android:inputType="textPassword"
            android:imeActionId="@integer/login"
            android:imeActionLabel="@string/action_sign_in_short"
            android:imeOptions="actionUnspecified"/>
        <EditText
            android:id="@+id/ET_password_check_signup"
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:hint="Password Check"/>
        <ImageButton
            android:id="@+id/IB_signup_signup"
            android:layout_width="200dp"
            android:layout_height="36dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/account_sign_up_resting"/>
    </LinearLayout>
</LinearLayout>
