<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.sopt.linkbox.activity.loginPage.SignupActivity"
    android:background="@color/indigo500">
    <include
        android:id="@+id/T_toolbar_signup"
        layout="@layout/layout_toolbar"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/sign_background"
            android:scaleType="centerCrop"
            android:alpha="0.3"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="40dp"
            >
            <RelativeLayout
                android:layout_width="236dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                >
                <!-- this will be added later
                <Button

                    android:layout_width="45dp"
                    android:layout_height="24dp"

                    android:layout_alignParentEnd="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:text="로그인"
                    android:gravity="center_vertical|end"
                    android:textSize="14.5dp"
                    android:textColor="@color/teala400"
                    />
                -->
            </RelativeLayout>
            <EditText
                android:id="@+id/ET_email_signup"
                android:layout_width="236dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:hint="@string/user_email_hint"
                android:layout_marginTop="7dp"
                android:fontFamily="san-serif"
                android:singleLine="true"
                android:background="@color/real_white"
                android:padding="10dp"
                />
            <EditText
                android:id="@+id/ET_name_signup"
                android:layout_width="236dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:hint="@string/user_name_hint"
                android:layout_marginTop="7dp"
                android:fontFamily="san-serif"
                android:singleLine="true"
                android:background="@color/real_white"
                android:padding="10dp"
                />
            <EditText
                android:id="@+id/ET_password_signup"
                android:layout_width="236dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:hint="@string/user_password_hint"
                android:singleLine="true"
                android:inputType="textPassword"
                android:fontFamily="san-serif"
                android:layout_marginTop="7dp"
                android:background="@color/real_white"
                android:padding="10dp"
                />
            <EditText
                android:id="@+id/ET_password_check_signup"
                android:layout_width="236dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:hint="@string/user_password_check_hint"
                android:singleLine="true"
                android:fontFamily="san-serif"
                android:inputType="textPassword"
                android:layout_marginTop="7dp"
                android:background="@color/real_white"
                android:padding="10dp"
                />
            <Button
                android:id="@+id/B_signup_signup"
                android:layout_width="236dp"
                android:layout_height="36dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="7dp"
                android:background="@drawable/custom_sign_rectangle"
                android:text="회원가입"
                android:textColor="@color/real_white"
                android:textStyle="bold"
                android:textSize="13dp"/>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
