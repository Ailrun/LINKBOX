<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:scrollbars="none"
    android:weightSum="1">
    <android.support.v7.widget.CardView
        xmlns:card_view = "http://schemas.android.com/apk/res-auto"
        android:layout_width="180dp"
        android:layout_height="240dp"
        card_view:cardCornerRadius="2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1"
            android:id="@+id/box_layout">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="180dp">
                <ImageView
                    android:id="@+id/IV_box_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:id="@+id/TV_box_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/real_white"
                    android:textSize="20sp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="5dp"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_weight="0.33"
                    android:layout_height="match_parent"
                    android:id="@+id/IV_favorite_btn" />
                <ImageView
                    android:background="@drawable/ic_box_edit"
                    android:layout_margin="5dp"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:layout_toEndOf="@+id/IV_favorite_btn"
                    android:id="@+id/IV_modify_btn" />
                <ImageView
                    android:background="@drawable/ic_box_delete"
                    android:layout_width="fill_parent"
                    android:layout_weight="0.33"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/IV_modify_btn"
                    android:id="@+id/IV_delete_btn" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
