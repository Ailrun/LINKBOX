<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="horizontal"
android:scrollbars="none">

<android.support.v7.widget.CardView
    xmlns:card_view = "http://schemas.android.com/apk/res-auto"
    android:layout_width="170dp"
    android:layout_height="235dp"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:id="@+id/box_layout">

        <TextView
            android:id="@+id/box_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/box_image"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_gravity="bottom"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:background="@drawable/unchecked_favorite_box"
                android:layout_width="56.6dp"
                android:layout_height="match_parent"
                android:id="@+id/favorite_btn" />

            <ImageView
                android:background="@drawable/modify_box"
                android:layout_width="56.6dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/favorite_btn"
                android:id="@+id/modify_btn" />

            <ImageView
                android:background="@drawable/delete_box"
                android:layout_width="56.6dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/modify_btn"
                android:id="@+id/delete_btn" />

        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>

</LinearLayout>
