<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.sopt.linkbox.activity.loginPage.LoginActivity"
    android:background="@color/indigo500">
    <include
        android:id="@+id/T_toolbar_login"
        layout="@layout/layout_toolbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:id="@+id/ET_email_login"
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:hint="이메일 주소"
            android:textColorHint="#FFAFAFAF"
            android:textColor="@color/real_white"/>
        <EditText
            android:id="@+id/ET_password_login"
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:hint="비밀번호"
            android:textColorHint="#FFAFAFAF"
            android:singleLine="true"
            android:inputType="textPassword"
            android:textColor="@color/real_white"
            android:imeActionId="@integer/login"
            android:imeActionLabel="@string/action_sign_in_short"
            android:imeOptions="actionUnspecified"/>
        <ImageButton
            android:id="@+id/IB_login_login"
            android:layout_width="200dp"
            android:layout_height="36dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:background="@drawable/account_login_resting"/>
    </LinearLayout>
</LinearLayout>
