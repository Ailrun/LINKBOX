<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.sopt.linkbox.activity.accountPage.LoginActivity"
    android:background="@color/indigo500">
    <include
        android:id="@+id/T_toolbar_login"
        layout="@layout/layout_toolbar"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/sign_background"
            android:scaleType="centerCrop"
            android:alpha="0.3"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="40dp"
            >
            <RelativeLayout
                android:layout_width="236dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                >
                <!-- This will be added later
                <Button

                    android:layout_width="85dp"
                    android:layout_height="24dp"
                    android:layout_alignParentStart="true"
                    android:gravity="center_vertical|start"
                    android:text="비밀번호 찾기"
                    android:textSize="14.5dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:textColor="#ffcfcfcf"

                    />
                <Button
                    android:layout_width="55dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:gravity="center_vertical|end"
                    android:text="회원가입"
                    android:textSize="14.5dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:textColor="@color/teala400"
                    />
                -->

            </RelativeLayout>
            <EditText
                android:id="@+id/ET_email_login"
                android:layout_width="236dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="10dp"
                android:layout_marginTop="7dp"
                android:hint="@string/user_email_hint"
                android:singleLine="true"
                android:textColorHint="#E0E0E0"
                android:textColor="@color/real_black"
                android:background="@color/real_white"
                />
            <EditText
                android:id="@+id/ET_password_login"
                android:layout_width="236dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="7dp"
                android:padding="10dp"
                android:hint="@string/user_password_hint"
                android:textColorHint="#E0E0E0"
                android:singleLine="true"
                android:inputType="textPassword"
                android:textColor="@color/real_black"
                android:background="@color/real_white"
                android:imeActionId="@integer/login"
                android:imeActionLabel="@string/action_sign_in_short"
                android:imeOptions="actionUnspecified"/>
            <Button
                android:id="@+id/B_login_login"
                android:layout_width="236dp"
                android:layout_height="36dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="7dp"
                android:background="@drawable/custom_sign_rectangle"
                android:text="로그인"
                android:textColor="@color/real_white"
                android:textStyle="bold"
                android:textSize="13dp"/>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
