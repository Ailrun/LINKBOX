    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="25">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9">

            <ImageView
                android:id="@+id/IV_thumb_link_it"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/splash"
                />
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:text="박스에 링크 추가"
                android:textColor="@color/real_white"
                android:textSize="20dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="16"
            android:padding="16dp"
            android:layout_marginBottom="-16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="제목"
                android:textColor="#8a000000"
                android:textSize="16dp"

                />

            <EditText
                android:id="@+id/ET_name_link_it"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:paddingTop="3dp"
                android:paddingStart="30dp"
                android:background="#00ffffff"
                android:singleLine="true"
                android:textSize="18dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="10dp"
                android:background="#3a000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="박스 선택"
                android:textColor="#8a000000"
                android:textSize="16dp"

                />

            <Spinner
                android:id="@+id/S_box_link_it"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:paddingTop="3dp"
                android:paddingStart="30dp"
                android:layout_alignParentStart="true"
                android:background="#00ffffff"
                android:spinnerMode="dropdown" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="10dp"
                android:background="#3a000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="태그"
                android:textColor="#8a000000"
                android:textSize="16dp"

                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:paddingTop="3dp"
                android:paddingStart="10dp"
                android:background="#00ffffff"
                android:singleLine="true"

                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="10dp"
                android:background="#3a000000" />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="나중에 읽기"
                android:textColor="#8a000000"
                android:textSize="16dp"
                />
<CheckBox
    android:id="@+id/CB_box_link_it"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"/>
</RelativeLayout>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/TV_box_link_it"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:text="4시간 후에 알림을 받아봅니다."
                    android:textColor="@color/real_white"
                    android:textSize="14dp"
                    android:background="@color/teala400"
                    />
            <TextView
                android:id="@+id/TV_blank"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:background="@color/real_white"
                />
        </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="24dp"
                android:layout_marginTop="30dp"
                >



                <Button
                    android:id="@+id/B_linkit_link_it"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_alignParentEnd="true"
                    android:background="#00ffffff"
                    android:gravity="center_horizontal|center"
                    android:paddingEnd="5dp"
                    android:paddingStart="5dp"
                    android:text="저장"
                    android:textColor="#ff008b8b"
                    android:textSize="14dp" />
                <Button
                    android:id="@+id/B_cancel_link_it"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginEnd="50dp"
                    android:layout_toStartOf="@id/B_linkit_link_it"
                    android:background="#00ffffff"
                    android:gravity="center_horizontal|center"
                    android:paddingEnd="5dp"
                    android:paddingStart="5dp"
                    android:text="취소"
                    android:textColor="#ff008b8b"
                    android:textSize="14dp"

                    />

            </RelativeLayout>

    </LinearLayout>
</RelativeLayout>
