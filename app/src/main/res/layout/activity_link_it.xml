    <ImageView
        android:id="@+id/IV_thumb_link_it"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:background="@color/real_white" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="박스에 링크 추가"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"

        android:textColor="#000"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@id/textView3"
        android:orientation="vertical"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="제목"
            android:textSize="16dp"
            android:textColor="#8a000000"

            />
        <EditText
            android:id="@+id/ET_name_link_it"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:background="#00ffffff"

            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#3a000000"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="박스 선택"
            android:textSize="16dp"
            android:textColor="#8a000000"

            />
        <Spinner
            android:id="@+id/S_box_link_it"
            android:spinnerMode="dropdown"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:background="#00ffffff"
            android:layout_below="@+id/textView4"
            android:layout_alignParentStart="true" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#3a000000"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="태그"
            android:textSize="16dp"
            android:textColor="#8a000000"

            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:background="#00ffffff"

            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#3a000000"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        >

        <Button
            android:id="@+id/B_cancel_link_it"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:text="취소"
            android:textSize="14dp"
            android:textColor="#ff008b8b"
            android:background="#00ffffff"

            />

        <Button
            android:id="@+id/B_linkit_link_it"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="저장"
            android:textSize="14dp"
            android:textColor="#ff008b8b"
            android:background="#00ffffff"
            />


    </LinearLayout>

</RelativeLayout>
