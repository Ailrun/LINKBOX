<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">
    <include
        android:id="@+id/T_toolbar_settings"
        layout="@layout/layout_toolbar"
        />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="0,1,2,3,4"
        android:background="@color/real_white">
        <TableRow>
            <TextView
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:text="계정설정"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                android:layout_span="5"/>
        </TableRow>
        <TableLayout
            android:stretchColumns="0,1,2,3,4"
            android:divider="@drawable/res_indigo500_vertical_divider"
            android:showDividers="beginning">
            <TableRow>
                <TextView
                    android:padding="10dp"
                    android:text="이름"/>
                <TextView
                    android:id="@+id/TV_user_name_user_setting"
                    android:padding="10dp"
                    android:text="이름"
                    android:gravity="end"
                    android:layout_span="4"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:padding="10dp"
                    android:text="계정"/>
                <TextView
                    android:id="@+id/TV_user_id_user_setting"
                    android:padding="10dp"
                    android:text="계정"
                    android:gravity="end"
                    android:layout_span="4"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/TV_logout_user_setting"
                    android:padding="10dp"
                    android:text="로그아웃"
                    android:layout_span="5"/>
                <TextView />
            </TableRow>
        </TableLayout>
        <TableRow>
            <TextView
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:text="박스 알람 설정"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                android:layout_span="5"/>
        </TableRow>
        <TableLayout
            android:stretchColumns="0,1,2,3,4"
            android:divider="@drawable/res_indigo500_vertical_divider"
            android:showDividers="beginning">
            <TableRow>
                <TextView
                    android:padding="10dp"
                    android:text="전체 알람 활성화"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/CB_alarm_enable"
                    android:layout_column="5" />
            </TableRow>
            <TableRow>
                <TextView
                    android:padding="10dp"
                    android:text="알람받을 항목 선택"
                    android:id="@+id/TV_alarm_choice"
                    android:layout_span="5"/>
            </TableRow>

        </TableLayout>
        <TableRow>
            <TextView
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:text="나중에 읽기 설정"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                android:layout_span="5"/>
        </TableRow>
        <TableLayout
            android:stretchColumns="0,1,2,3,4"
            android:divider="@drawable/res_indigo500_vertical_divider"
            android:showDividers="beginning">
            <TableRow>
                <TextView
                    android:padding="10dp"
                    android:text="나중에 읽기 활성화"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/CB_read_later_enable"
                    android:layout_column="5" />
            </TableRow>
            <TableRow>
                <TextView
                    android:padding="10dp"
                    android:text="나중에 읽을 시간"
                    android:id="@+id/TV_read_later_time"
                    android:layout_span="5"/>
            </TableRow>
        </TableLayout>
    </TableLayout>
</LinearLayout>