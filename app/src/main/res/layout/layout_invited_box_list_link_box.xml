<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="none">
    <RelativeLayout
        android:id="@+id/RL_invited_box_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/real_white">
        <LinearLayout
            android:id="@+id/LL_invited_box_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="88dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">
                <TextView
                    android:id="@+id/TV_invited_box_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="80dp"
                    android:layout_marginStart="30dp"
                    android:text="여기는 글자가 들어갈 것이다! 록타! 오가르!" />
                <TextView
                    android:id="@+id/TV_invited_box_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="14dp"
                    android:maxWidth="60dp"
                    android:singleLine="true"
                    android:text="시간" />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/LL_invited_box_expandable"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_below="@id/LL_invited_box_header"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingEnd="16dp">
                <Button
                    android:id="@+id/B_invited_box_reject"
                    style="@style/button_style"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="10dp"
                    android:text="거절" />
                <Button
                    android:id="@+id/B_invited_box_accept"
                    style="@style/button_style"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="30dp"
                    android:layout_toLeftOf="@id/B_invited_box_reject"
                    android:text="수락"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
