<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/real_black">

    <com.edmodo.cropper.CropImageView
        android:id="@+id/CIV_crop_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/real_black"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/B_accept" />
    <Button
        android:id="@+id/B_ratio"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:textSize="14dp"
        android:textColor="@color/real_white"
        android:textStyle="bold"
        android:background="@drawable/custom_border_black"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/B_accept"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"/>

    <Button
        android:id="@+id/B_accept"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:text="Ok"
        android:textSize="14dp"
        android:textColor="@color/real_white"
        android:textStyle="bold"
        android:background="@drawable/custom_border_black"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/B_decline"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"/>

    <Button
        android:id="@+id/B_decline"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:text="Cancel"
        android:textSize="14dp"
        android:textColor="@color/real_white"
        android:textStyle="bold"
        android:background="@drawable/custom_border_black"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>