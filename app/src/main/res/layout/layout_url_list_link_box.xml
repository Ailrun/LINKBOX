<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/SL_swape_link_box"
    android:layout_width="match_parent"
    android:layout_height="88dp">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:stretchColumns="1,2,3"
        android:background="@color/indigo200">
        <TableRow
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
            </LinearLayout>
            <ImageButton
                android:id="@+id/IB_delete_link_box"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/indigo200"
                android:src="@drawable/abc_btn_check_to_on_mtrl_015"/>
            <ImageButton
                android:id="@+id/IB_edit_link_box"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/indigo200"
                android:src="@drawable/abc_btn_check_to_on_mtrl_015"/>
            <ImageButton
                android:id="@+id/IB_share_link_box"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/indigo200"
                android:src="@drawable/abc_btn_check_to_on_mtrl_015"/>
        </TableRow>
    </TableLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_marginEnd="16dp">
        <ImageView
            android:id="@+id/IV_thumb_link_box"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/mainpage_image"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/IV_thumb_link_box">
            <TextView
                android:id="@+id/TV_url_writer_link_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:layout_marginTop="12dp"
                android:singleLine="true"
                android:text="url writer"
                android:textColor="#ff5b6abf"/>
            <TextView
                android:id="@+id/TV_url_name_link_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="url name"
                android:textSize="16dp"
                android:textColor="@color/real_black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="url address"
                android:textColor="#ff5b6abf"
                android:layout_marginBottom="20dp"
                android:id="@+id/TV_url_address_link_box" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="date"
                android:textColor="#ff5b6abf"
                android:layout_alignParentEnd="true"
                android:id="@+id/TV_url_date_link_box" />
            <ImageButton
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/IB_like_link_box"
                android:layout_below="@+id/TV_url_date_link_box"
                android:layout_marginTop="10dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/mainpage_bookmark_unchecked"/>
        </RelativeLayout>
    </RelativeLayout>
</com.daimajia.swipe.SwipeLayout>