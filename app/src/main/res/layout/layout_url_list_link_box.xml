<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:layout_marginEnd="16dp">
    <RelativeLayout
        android:id="@+id/RL_url_image_link_box"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/IV_thumb_link_box"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_centerInParent="true"
            android:background="@drawable/mainpage_image"/>
        <ImageView
            android:id="@+id/IV_favorite_link_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/RL_url_image_link_box">

        <TextView
            android:id="@+id/TV_url_writer_date_link_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:layout_marginTop="12dp"
            android:singleLine="true"
            android:text="url maker"
            android:textColor="#5b6abf"/>

        <TextView
            android:id="@+id/TV_url_name_link_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="url name"
            android:textSize="16dp"
            android:textColor="#000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="url context"
            android:layout_marginBottom="20dp"
            android:id="@+id/TV_url_context_link_box" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="date"
            android:textColor="#5b6abf"
            android:layout_alignParentEnd="true"
            android:id="@+id/textView2" />

        <ImageButton
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/IB_like_link_box"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="10dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/mainpage_bookmark_unchecked"/>
    </RelativeLayout>
</RelativeLayout>