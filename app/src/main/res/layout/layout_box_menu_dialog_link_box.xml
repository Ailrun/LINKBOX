<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="200dp"
    android:layout_gravity="center"
    android:background="@color/real_white"
    android:weightSum="1">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <TextView
            android:id="@+id/TV_title_box_delete_dialog"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="15dp"
            android:background="@color/indigo500"
            android:gravity="center"
            android:text="박스 메뉴"
            android:textSize="20dp"
            android:textColor="@color/real_white"/>
        <ImageView
            android:id="@+id/IV_menu_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_box_menu_close"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@color/indigo500"
            android:padding="10dp"/>
    </RelativeLayout>


    <TextView
        android:id="@+id/TV_box_share"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.33"
        android:padding="10dp"
        android:gravity="center"
        android:text="박스 공유하기"
        android:textSize="16dp"
        android:textColor="@color/indigo500"/>
    <TextView
        android:id="@+id/TV_box_edit"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.33"
        android:padding="10dp"
        android:gravity="center"
        android:text="박스 편집하기"
        android:textSize="16dp"
        android:textColor="@color/indigo500"/>
    <TextView
        android:id="@+id/TV_box_delete"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.34"
        android:padding="10dp"
        android:gravity="center"
        android:text="박스 지우기"
        android:textSize="16dp"
        android:textColor="@color/indigo500"/>
</LinearLayout>