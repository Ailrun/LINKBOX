<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <include
        android:id="@+id/T_toolbar_link_box"
        layout="@layout/layout_toolbar"/>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_below="@id/T_toolbar_link_box"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:verticalScrollbarPosition="defaultPosition">
        <TextView
            android:id="@+id/TV_how_to_share_box_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="박스 공유는 어떻게 하나요?"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/TV_how_to_share_box_answer_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="공유하고 싶은 박스 페이지의 우측 상단의 박스 정보 아이콘을 누릅니다."/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/help_box_share"
            android:adjustViewBounds="true"/>
        <TextView
            android:id="@+id/TV_how_to_share_box_answer_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="여기 박스 정보 페이지에서 현재 이 박스를 공유중인 사람들을 볼 수 있습니다. 이 페이지의 우측 상단의 공유하기 버튼을 누르면, 박스 공유하기 페이지가 나옵니다."/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/help_editor_list"
            android:adjustViewBounds="true"/>
        <TextView
            android:id="@+id/TV_how_to_share_box_answer_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="공유할 사람의 이메일 주소를 적고, 보내고 싶은 메세지를 적은 후 우측 상단의 전송버튼을 누르면 그 사람에게 초대가 보내집니다."/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/help_editor_add"
            android:adjustViewBounds="true"/>
</LinearLayout>
    </ScrollView>
</RelativeLayout>