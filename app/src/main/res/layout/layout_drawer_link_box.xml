<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dp"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/indigo500">
        <ImageView
            android:id="@+id/IV_profile"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/realWhite"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">
        <LinearLayout
            android:id="@+id/LL_box_info_link_box"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/indigo500">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/abc_ic_menu_selectall_mtrl_alpha"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="내 박스"
                android:textColor="#FFFFFFFF"/>
            <TextView
                android:id="@+id/TV_box_number_link_box"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text=""
                android:textColor="#FFEEEEFF"/>
        </LinearLayout>
        <ListView
            android:id="@+id/LV_box_list_link_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LL_box_info_link_box"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/indigo500"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/B_to_settings_link_box"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#FFFFFFFF"
            android:text="설정"/>
        <Button
            android:id="@+id/B_to_premium_link_box"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/B_to_settings_link_box"
            android:background="#FFFFFFFF"
            android:text="프리미엄"/>
    </RelativeLayout>
</LinearLayout>