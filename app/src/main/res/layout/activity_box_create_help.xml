<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/T_toolbar_link_box"
        layout="@layout/layout_toolbar" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/SV_help_add_box"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/T_toolbar_link_box">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:verticalScrollbarPosition="defaultPosition">

            <TextView
                android:id="@+id/TV_how_to_add_box_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="박스 추가는 어떻게 하나요?" />

            <TextView
                android:id="@+id/TV_how_to_add_box_answer_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="내 박스 화면의 우측상단에 위치한, 아래 사진에 초록색 원으로 표시된 박스 추가 버튼을 누르면 박스 추가 팝업이 떠오릅니다." />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/help_add_box_page" />

            <TextView
                android:id="@+id/TV_how_to_add_box_answer_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="박스 이름을 쓰면 세로운 박스를 만들 수 있습니다. 또한 파란색의 기본 이미지를 터치하시면 박스 이미지를 바꿀 수 있습니다." />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/help_box_add"/>

            <TextView
                android:id="@+id/TV_how_to_edit_box_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="이미 만든 박스는 어떻게 수정하나요?"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TV_how_to_edit_box_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="내 박스 페이지의 박스 카드의 하단에 위치한 아이콘들 중 연필모양 아이콘이 수정 버튼입니다. 이 버튼을 누르면 박스의 이름 및 이미지를 수정 할 수 있습니다." />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/help_my_box_edit" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>