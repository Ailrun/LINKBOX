<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/indigo500">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/account_image"/>
    <com.facebook.login.widget.LoginButton
        android:id="@+id/LB_login_account"
        android:layout_width="200dp"
        android:layout_height="36dp"
        android:layout_margin="10dp"
        android:background="@drawable/account_facebook_login_resting"/>
    <ImageButton
        android:id="@+id/IB_login_account"
        android:layout_width="200dp"
        android:layout_height="36dp"
        android:adjustViewBounds="true"
        android:layout_margin="10dp"
        android:background="@drawable/account_login_resting"/>
    <ImageButton
        android:id="@+id/IB_signup_account"
        android:layout_width="200dp"
        android:layout_height="36dp"
        android:adjustViewBounds="true"
        android:layout_margin="10dp"
        android:background="@drawable/account_sign_up_resting"/>
</LinearLayout>