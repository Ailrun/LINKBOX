<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.sopt.linkbox"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="22" />
    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--
 To retrieve OAuth 2.0 tokens or invalidate tokens to disconnect a user. This disconnect
     option is required to comply with the Google+ Sign-In developer policies
    -->
    <uses-permission android:name="android.permission.USE_CREDENTIALS" /> <!-- To retrieve the account name (email) as part of sign-in: -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" /> <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:minSdkVersion="19" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:minSdkVersion="19" />

    <!-- for android badge -->
    <uses-permission android:name="com.android.launcher.permission.READ_SETTINGS" />
    <uses-permission android:name="com.android.launcher.permission.WRITE_SETTINGS" />
    <!-- for Samsung badge -->
    <uses-permission android:name="com.sec.android.provider.badge.permission.READ" />
    <uses-permission android:name="com.sec.android.provider.badge.permission.WRITE" />
    <!-- for htc badge -->
    <uses-permission android:name="com.htc.launcher.permission.READ_SETTINGS" />
    <uses-permission android:name="com.htc.launcher.permission.UPDATE_SHORTCUT" />
    <!-- for sony badge -->
    <uses-permission android:name="com.sonyericsson.home.permission.BROADCAST_BADGE" />
    <!-- for apex badge -->
    <uses-permission android:name="com.anddoes.launcher.permission.UPDATE_COUNT" />

    <!-- for Push Notification -->
    <permission
        android:name="org.sopt.linkbox.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="org.sopt.linkbox.permission.C2D_MESSAGE" />

    <!-- InApp purchase -->
    <!-- <permission android:name="com.android.vending.BILLING" /> -->
    <application
        android:name=".LinkBoxController"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar" >
        <activity
            android:name=".activity.effectPage.SplashActivity"
            android:label="@string/app_name"
            android:launchMode="singleInstance"
            android:noHistory="true"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.loginPage.MainActivity"
            android:label="@string/title_activity_main"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activity.loginPage.LoginActivity"
            android:label="@string/title_activity_login"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" >
        </activity>

        <!-- 아래 부분은 SDK 4.0.0 버전 이후로설정해줘야 하는 부분으로 가이드 라인에 나와있습니다 -->
        <!-- https://developers.facebook.com/docs/android/getting-started#login_share -->


        <!-- 이 부분 설정 필수 -->
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <!-- com.facebook.app.FacebookContentProvider 뒤에다가 App ID 추가 필수 -->
        <provider
            android:name="com.facebook.FacebookContentProvider"
            android:authorities="@string/facebook_authority"
            android:exported="true" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />
        <!-- 이 부분 설정 필수 -->

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <service
            android:name=".service.LinkHeadService"
            android:exported="false" >
        </service>

        <activity
            android:name=".activity.mainPage.LinkBoxActivity"
            android:label="@string/title_activity_link_box"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activity.mainPage.LinkItActivity"
            android:label="@string/title_activity_link_it"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" >
            <intent-filter android:label="LINKBOX" >
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:host="http"
                    android:mimeType="text/plain" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.loginPage.SignupActivity"
            android:label="@string/title_activity_signup"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activity.loginPage.FacebookDataActivity"
            android:label="@string/title_activity_facebook_data"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activity.mainPage.UserSettingActivity"
            android:label="@string/title_activity_user_setting"
            android:parentActivityName=".activity.mainPage.LinkBoxActivity"
            android:screenOrientation="portrait" >
        </activity>

        <!-- for Push -->
        <service
            android:name=".service.pushService.LinkGcmListenerService"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
            </intent-filter>
        </service>
        <service
            android:name=".service.pushService.LinkInstanceIDListenerService"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.google.android.gms.iid.InstanceID" />
            </intent-filter>
        </service>
        <service
            android:name=".service.pushService.LinkRegistrationService"
            android:exported="false" >
        </service>

        <receiver
            android:name="com.google.android.gms.gcm.GcmReceiver"
            android:enabled="true"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

                <category android:name="org.sopt.linkbox" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".activity.mainPage.BoxEditorAdd"
            android:label="@string/title_activity_box_editor_list"
            android:parentActivityName=".activity.mainPage.LinkBoxActivity" >
        </activity>
        <activity
            android:name=".activity.mainPage.BoxEditorList"
            android:label="@string/title_activity_box_editor_add"
            android:parentActivityName=".activity.mainPage.LinkBoxActivity" >
        </activity>
        <activity
            android:name=".activity.loadingPage.LoginLoadingActivity"
            android:label="@string/title_activity_loading"
            android:launchMode="singleTask">
        </activity>
        <activity
            android:name=".activity.mainPage.BoxListEditActivity"
            android:label="@string/title_activity_box_list_edit" >
        </activity>
    </application>

</manifest>
